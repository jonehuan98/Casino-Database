#Generate tables

CREATE TABLE user_info (
    uid int NOT NULL,
    hashed_password,
    email varchar(255),
    user_status,
    child_address_BTC,
    child_address_ETH,
    user_balance_BTC,
    user_balance_ETH,
    newsletter_true,
    terms_conditions_accepted,
    email_verification_code,
    user_referral_code,
    PRIMARY KEY (uid)
);

CREATE TABLE transaction_ETH (
    tid_ETH NOT NULL,
    child_address_ETH,
    amount_ETH,
    transaction_time,
    blockchain_confirmation,  
    PRIMARY KEY (tid_ETH) 
);

CREATE TABLE transaction_BTC (
    tid_BTC NOT NULL,
    child_address_BTC,
    amount_BTC,
    transaction_time,
    blockchain_confirmation,
    PRIMARY KEY (tid_BTC)
);

CREATE TABLE game_history (
    sessionid NOT NULL,
    gameid,
    timestamp,
    amount_game,
    uid,
    PRIMARY KEY (sessionid)  
);



